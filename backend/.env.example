# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/storysentinel
MONGODB_TEST_URI=mongodb://localhost:27017/storysentinel_test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Story Protocol Configuration
STORY_PROTOCOL_API_KEY=your-story-protocol-api-key
STORY_PROTOCOL_NETWORK=testnet
STORY_PROTOCOL_RPC_URL=https://rpc.odyssey.storyrpc.io
STORY_PROTOCOL_CHAIN_ID=1516

# Yakoa API Configuration
YAKOA_API_KEY=your-yakoa-api-key
YAKOA_API_BASE_URL=https://api.yakoa.com/v1
YAKOA_WEBHOOK_SECRET=your-yakoa-webhook-secret

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,video/mp4,audio/mpeg,application/pdf

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@storysentinel.com

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_SESSION_SECRET=your-redis-session-secret

# Blockchain Configuration
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-api-key
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/your-api-key
PRIVATE_KEY=your-private-key-for-blockchain-transactions

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs

# External Services
PINATA_API_KEY=your-pinata-api-key
PINATA_SECRET_KEY=your-pinata-secret-key
IPFS_GATEWAY=https://gateway.pinata.cloud/ipfs/
